{% extends "../_layouts/page.twig" %}

{% block title "nourthe's Blog - " ~ title %}

  {% block header_content %}
    <a href="/blog"><h4>Return to blog menu</h4></a>
    <h1>{{title}}</h1>
    <h2>{{description}}</h2>
    <h2>{{attributes.date.toLocaleDateString(lang)}}</h2>
  {% endblock %}

{% block content %}

<section>
  <div class="container">
    {{ body }}
  </div>
</section>

<section>
  <div class="container">
    <div id="hashover"></div>
  </div>
</section>

<script type="text/javascript" src="/app/hashover/loader.php"></script>
<script type="text/javascript">
    var hashover = new HashOver ('hashover', {
        settings: {
            language: 'es_ES'
        }
    });
</script>

{% endblock %}
